{% extends "admin/base.html.twig" %}

{% block assets_path %}../../../{% endblock %}
{% block surveys_active %}kt-menu__item--active{% endblock %}
{% block users_active %}{% endblock %}
{% block subheader_title %}{% endblock %} 
{% block page_scripts %}
	<script src="./assets/js/demo7/pages/crud/metronic-datatable/base/data-local.js" type="text/javascript"></script>
	<script src="./assets/js/demo7/pages/crud/forms/widgets/bootstrap-select.js" type="text/javascript"></script>
{% endblock %}  
 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('collection') }}
 {% endblock %}

 {% block javascripts %}
     {{ parent() }}
     {{ encore_entry_script_tags('collection') }}
 {% endblock %}


{% block content %}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
	<!--begin::Back Button-->
	<a href="{{ path('admin_surveys') }}" class="btn btn-clean btn-icon-sm">
		<i class="la la-long-arrow-left"></i>
		Back
	</a>
	<!--end::Back Button-->
	<div class="row">
	    <div class="col-md-6">
		<!--begin::Portlet--> 
		<div class="kt-portlet huge-form">
			<div class="kt-portlet__head">
				<div class="kt-portlet__head-label">
					<h3 class="kt-portlet__head-title">
						Create a new survey
					</h3> 
				</div>
			</div>
			<!--begin::Form-->
			<form class="kt-form" method="post">
				<div class="kt-portlet__body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label class="class-for-label">Name</label>
                        {{ form_widget(form.name) }}
					</div>
                    <div class="form-group">
                        <label>Description</label>
						{{ form_widget(form.description) }}
					</div>
                    <div class="form-group">
                        <label>Format</label>
						{{ form_widget(form.format) }}
					</div>
                    <div class="form-group">
                        <label>Choose Business</label>
						<input id="survey_business" class="form-control" ></input>
						<input  id="survey_business_hidden" name="survey[business]" type="hidden" ></input>
					</div>
                    <div class="form-group">
                        <label>Add survey to branches:</label>
						{{ form_widget(form.branches) }}
					</div>
					<div class="form-group">
						<ul class="questions"   data-prototype="{{ form_widget(form.questions.vars.prototype)|e('html_attr') }}">
						{% for questionField in form.questions %}
							
									<!--begin::Accordion-->
										<div class="accordion my-accordion accordion-solid accordion-toggle-plus" id="accordionExample6">
											<a class="card-delete"></a>
											<div class="card">
												<div class="card-header" id="headingOne6">
													<div class="card-title" data-toggle="collapse" data-target="#collapseOne6" aria-expanded="true" aria-controls="collapseOne6">
														<i class="flaticon-pie-chart-1"></i> Question 1
													</div>
												</div>
												<div id="collapseOne6" class="collapse show" aria-labelledby="headingOne6" data-parent="#accordionExample6">
													<div class="card-body">
														{{ form_errors(questionField) }}
												
														{{ form_row(questionField.title) }}

														{{ form_row(questionField.answer_type) }}
														
														{{ form_row(questionField.answers) }}
													</div>
												</div>
											</div>
										</div>
										<!--end::Accordion-->
									

									{# UL #}
									 {# <ul class="form-group answers-area"  data-prototype="{{ form_widget(questionField.answers.vars.prototype)|e('html_attr') }}">
										{% for answer in questionField.answers %}
											{{ form_widget(answer) }}
										{% endfor %}
									</ul>   #}
								
						{% endfor %}
						</ul>
					</div>

				</div>
				<div class="kt-portlet__foot">
					<div class="kt-form__actions">					
						 <button type="submit" class="btn btn-primary">Submit</button> 
						<button type="reset" class="btn btn-secondary">Cancel</button>
					</div>
				</div>
				{# {{ form_widget(form._csrf_token) }} #}
				{# {{ form_widget(formView._token) }} #}
				{{ form_widget(form._token) }}
				{{ form_end(form, {'render_rest': false}) }}
			</form>
			<!--end::Form-->			
		</div>
		<!--end::Portlet-->
	    </div>
    </div>
</div>


{% endblock %}